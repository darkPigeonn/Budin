<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sel_neuroglial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckg_semua_budin">

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp">
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.5"
            android:scaleY="0.9"
            android:background="@drawable/comp_back_button">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@id/ln2"
        android:layout_toEndOf="@id/ln1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/title_sel_neuroglial">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ln2"
        android:layout_marginTop="9dp"
        android:paddingEnd="18dp"
        android:layout_marginStart="106dp">
        <Button
            android:id="@+id/home_button"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_home_button"
            android:scaleX="1">
        </Button>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ln_text1"
        android:layout_below="@id/ln1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"

        android:orientation="vertical"
        android:layout_marginStart="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_text_neuroglial_1"
            android:fontFamily="@font/segoeui"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:justificationMode="inter_word">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_text_number_1"
                android:fontFamily="@font/segoeui"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="12dp"
                android:textSize="18sp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_text_neuroglial_2"
                android:fontFamily="@font/segoeui"
                android:textColor="#FFFFFF"
                android:textSize="18sp">
            </TextView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_text_neuroglial_3"
            android:fontFamily="@font/segoeui"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginStart="23dp"
            android:justificationMode="inter_word">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_text_number_2"
                android:fontFamily="@font/segoeui"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="12dp"
                android:textSize="18sp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_text_neuroglial_4"
                android:fontFamily="@font/segoeui"
                android:textColor="#FFFFFF"
                android:textSize="18sp">
            </TextView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_text_neuroglial_5"
            android:fontFamily="@font/segoeui"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginStart="23dp"
            android:justificationMode="inter_word">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_text_number_3"
                android:fontFamily="@font/segoeui"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="12dp"
                android:textSize="18sp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_text_neuroglial_6"
                android:fontFamily="@font/segoeui"
                android:textColor="#FFFFFF"
                android:textSize="18sp">
            </TextView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_text_neuroglial_7"
            android:fontFamily="@font/segoeui"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginStart="23dp"
            android:justificationMode="inter_word">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_text_number_4"
                android:fontFamily="@font/segoeui"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="12dp"
                android:textSize="18sp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_text_neuroglial_8"
                android:fontFamily="@font/segoeui"
                android:textColor="#FFFFFF"
                android:textSize="18sp">
            </TextView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_text_neuroglial_9"
            android:fontFamily="@font/segoeui"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginStart="23dp"
            android:justificationMode="inter_word">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln3"
        android:layout_below="@id/ln_text1"
        android:layout_marginStart="322dp"
        android:layout_width="wrap_content"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/forward_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_forward_white"
            android:scaleX="0.6">
        </Button>
    </LinearLayout>


</RelativeLayout>