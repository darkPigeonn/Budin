<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_kulit">

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp">
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.5"
            android:scaleY="0.9"
            android:background="@drawable/comp_back_button">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@id/ln2"
        android:layout_toEndOf="@id/ln1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/title_kulit">
        </ImageView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ln2"
        android:layout_marginTop="9dp"
        android:paddingEnd="18dp"
        android:layout_marginStart="202dp">
        <Button
            android:id="@+id/home_button"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_home_button"
            android:scaleX="1">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln3"
        android:layout_below="@id/ln2"
        android:layout_marginTop="29dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/content_image_kulit">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln4"
        android:layout_below="@id/ln3"
        android:paddingTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="382dp">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/scroll"
                android:orientation="vertical"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:fontFamily="@font/segoeui"
                    android:justificationMode="inter_word"
                    android:textStyle="bold"
                    android:text="@string/context_text_kulit_1"
                    android:textColor="#000000"
                    android:textSize="17sp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:fontFamily="@font/segoeui"
                    android:justificationMode="inter_word"
                    android:text="@string/context_text_kulit_1_"
                    android:textColor="#000000"
                    android:textSize="17sp">
                </TextView>

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:fontFamily="@font/segoeui"
                android:justificationMode="inter_word"
                android:textStyle="bold"
                android:text="@string/context_text_kulit_2"
                android:textColor="#000000"
                android:textSize="17sp">
            </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:fontFamily="@font/segoeui"
                    android:justificationMode="inter_word"
                    android:text="@string/context_text_kulit_2_"
                    android:textColor="#000000"
                    android:textSize="17sp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:fontFamily="@font/segoeui"
                    android:justificationMode="inter_word"
                    android:textStyle="bold"
                    android:text="@string/context_text_kulit_3"
                    android:textColor="#000000"
                    android:textSize="17sp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:fontFamily="@font/segoeui"
                    android:justificationMode="inter_word"
                    android:text="@string/context_text_kulit_3_"
                    android:textColor="#000000"
                    android:textSize="17sp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:fontFamily="@font/segoeui"
                    android:justificationMode="inter_word"
                    android:textStyle="bold"
                    android:text="@string/context_text_kulit_4"
                    android:textColor="#000000"
                    android:textSize="17sp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:fontFamily="@font/segoeui"
                    android:justificationMode="inter_word"
                    android:text="@string/context_text_kulit_4_"
                    android:textColor="#000000"
                    android:textSize="17sp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:fontFamily="@font/segoeui"
                    android:justificationMode="inter_word"
                    android:textStyle="bold"
                    android:text="@string/context_text_kulit_5"
                    android:textColor="#000000"
                    android:textSize="17sp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:fontFamily="@font/segoeui"
                    android:justificationMode="inter_word"
                    android:text="@string/context_text_kulit_5_"
                    android:textColor="#000000"
                    android:textSize="17sp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:fontFamily="@font/segoeui"
                    android:justificationMode="inter_word"
                    android:textStyle="bold"
                    android:text="@string/context_text_kulit_6"
                    android:textColor="#000000"
                    android:textSize="17sp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:fontFamily="@font/segoeui"
                    android:justificationMode="inter_word"
                    android:text="@string/context_text_kulit_6_"
                    android:textColor="#000000"
                    android:textSize="17sp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:fontFamily="@font/segoeui"
                    android:justificationMode="inter_word"
                    android:textStyle="bold"
                    android:text="@string/context_text_kulit_7"
                    android:textColor="#000000"
                    android:textSize="17sp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:fontFamily="@font/segoeui"
                    android:justificationMode="inter_word"
                    android:text="@string/context_text_kulit_7_"
                    android:textColor="#000000"
                    android:textSize="17sp">
                </TextView>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln5"
        android:layout_below="@id/ln4"
        android:layout_marginStart="322dp"
        android:layout_width="wrap_content"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/forward_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_forward"
            android:scaleX="0.6">
        </Button>
    </LinearLayout>


</RelativeLayout>